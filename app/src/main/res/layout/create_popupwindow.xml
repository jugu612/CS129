<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Planner">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="550dp"
        app:cardCornerRadius="50dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="274dp"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="30dp"
                android:layout_marginTop="470dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="#009688"
                    android:fontFamily="@font/glacial_indifference_bold"
                    android:text="@string/save"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_gravity="start"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="#F44336"
                    android:fontFamily="@font/glacial_indifference_bold"
                    android:text="@string/cancel"
                    android:textColor="@color/white" />
            </FrameLayout>

            <EditText
                android:id="@+id/edit_title"
                android:layout_width="287dp"
                android:layout_height="55dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:ems="10"
                android:fontFamily="@font/glacial_indifference_bold"
                android:inputType="textShortMessage"
                android:minHeight="48dp"
                android:hint="Title"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/text_detail"
                android:layout_width="127dp"
                android:layout_height="23dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/glacial_indifference"
                android:text=" Details:"
                android:textAllCaps="false"
                android:textColor="@drawable/button_effects"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_title" />


            <EditText
                android:id="@+id/edit_details"
                android:layout_width="268dp"
                android:layout_height="202dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/roundborder"
                android:backgroundTint="#d3d3d3"
                android:fontFamily="@font/glacial_indifference"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:padding="16dp"
                android:hint="Add Details..."
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_detail" />

            <TextView
                android:id="@+id/task_deadline"
                android:layout_width="97dp"
                android:layout_height="24dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="24dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/glacial_indifference"
                android:text=" Date:"
                android:textAllCaps="false"
                android:textColor="@drawable/button_effects"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_details" />

            <Button
                android:id="@+id/dateButton"
                android:layout_width="194dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="44dp"
                android:layout_marginBottom="78dp"
                android:background="@null"
                android:fontFamily="@font/glacial_indifference_bold"
                android:gravity="left"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/frameLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_details"
                app:layout_constraintVertical_bias="0.631" />

            <TextView
                android:id="@+id/task_label"
                android:layout_width="70dp"
                android:layout_height="23dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="24dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/glacial_indifference"
                android:text=" Label:"
                android:textAllCaps="false"
                android:textColor="@drawable/button_effects"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/task_deadline" />

            <Spinner
                android:id="@+id/task_spinner"
                android:layout_width="179dp"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="31dp"
                android:entries="@array/options"
                android:spinnerMode="dropdown"
                android:background="#D3D3D3"
                android:fontFamily = "@font/glacial_indifference_bold"
                app:layout_constraintBottom_toTopOf="@+id/frameLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/task_label"
                app:layout_constraintTop_toBottomOf="@+id/dateButton" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>