<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#048C7F ">

    <ImageView
        android:id="@+id/gradientTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds ="true"
        android:layout_gravity="top"
        android:scaleY="-1"
        android:src="@drawable/texture_gradient" />

    <ImageView
        android:id="@+id/gradientBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds ="true"
        android:layout_gravity="bottom"
        android:src="@drawable/texture_gradient" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        tools:context=".RegLogin">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="500dp"
            android:layout_height="250dp"
            android:layout_marginTop="150dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/app_logo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/google_login_button"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:fontFamily="@font/glacial_indifference_bold"
                android:text="@string/login"
                android:textColor="@android:color/black"
                android:drawableLeft="@drawable/google_small"
                android:padding="10dp"
                android:background="@drawable/rounded_rectangle"/>


        </LinearLayout>



    </LinearLayout>
</FrameLayout>